body {
  padding-top: 60px; /* 100px to make the container go all the way to the bottom of the topbar */
  background: url(<%= asset_data_uri('groovepaper.png') %>) repeat center top;
  padding-bottom: 40px;
}

.container {
  width: 640px;
}

h1 {
  font-family: 'Arvo', serif;
}

h1.big {
  font-size: 8em;
  line-height: 1.2em;
}

.hero-unit {
  text-align: center;
  background: none;
  padding-bottom: 40px;
  padding-top: 0;
}

.intro {
  border-bottom: 1px solid #CCC;
  padding-bottom: 40px;
}

.code {
  color: #333;
  padding: 0;
  background-color: none;
  border: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  font-family: "Courier New", Courier, mono;
  font-size: 1em;
}

.code-one {
  width: 100%;
  height: 30px;
}

.code-two {
  width: 100%;
  height: 70px;
}

.glasses {
  background-image: url(http://iconom.us/glasses-100x100.png);
  background-repeat: no-repeat;
  width: 100px;
  height: 100px;
}

.code-three {
  width: 100%;
  height: 70px;
}

.noun {
  text-align: right;
  padding: 10px 0 0 0;
}

.examples {
  padding: 40px 0 0 0;
}

.example {
  padding: 20px 0 0 0;
}

.code {
  padding: 4px;
}

.block {
  padding: 20px 0 0 0;
  border: 1px solid #EEE;
  background: #FFF;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -o-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0px 1px 1px #CCC;
}

footer {
  padding: 60px 0 0 0;
  text-align: center;
}